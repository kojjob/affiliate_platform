            </div>
            <div class="text-sm text-slate-500">
              Estimated time: <span class="font-medium text-slate-700"><%= step[:time] %></span>
            </div>
          </div>
          
          <!-- Step Content -->
          <div class="flex-1 <%= index.even? ? 'lg:pr-12' : 'lg:pl-12' %>">
            <h3 class="text-2xl font-bold text-slate-900 mb-4"><%= step[:title] %></h3>
            <p class="text-lg text-slate-600 mb-6"><%= step[:description] %></p>
            
