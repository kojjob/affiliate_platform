    {
      "@context": "https://schema.org",
      "@type": "HowTo",
      "name": "Getting Started with AffiliateMarket",
      "description": "Complete beginner's guide to starting affiliate marketing with AffiliateMarket",
      "totalTime": "PT15M",
      "estimatedCost": {
        "@type": "MonetaryAmount",
        "currency": "USD",
        "value": "0"
      },
      "step": [
        <% @setup_steps.each_with_index do |step, index| %>
          {
            "@type": "HowToStep",
            "name": "<%= step[:title] %>",
            "text": "<%= step[:description] %>",
            "position": <%= step[:step] %>,
            "estimatedCost": {
              "@type": "MonetaryAmount",
              "currency": "USD",
              "value": "0"
            }
          }<%= index < @setup_steps.length - 1 ? ',' : '' %>
        <% end %>
      ]
    }
  </script>
<% end %>

