      "@type": "HowTo",
      "name": "How to Start Affiliate Marketing with AffiliateMarket",
      "description": "Step-by-step guide to earning money through affiliate marketing",
      "estimatedCost": {
        "@type": "MonetaryAmount",
        "currency": "USD",
        "value": "0"
      },
