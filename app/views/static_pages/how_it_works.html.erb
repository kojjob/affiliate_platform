    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      How It Works
    </h1>
    <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed mb-8">
      Start earning in 3 simple steps. No experience needed, no upfront costs.
    </p>
    <div class="inline-flex items-center px-6 py-3 bg-white/20 backdrop-blur-sm border border-white/30 rounded-full">
      <span class="text-white font-medium">⏱️ Get started in under 5 minutes</span>
    </div>
  </div>
</section>

<!-- Steps Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Your Path to Earning</h2>
      <p class="text-lg text-slate-600">Follow these simple steps to start your affiliate marketing journey</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <% @steps.each_with_index do |step, index| %>
        <div class="relative text-center group">
          <!-- Step Number -->
          <div class="relative">
            <div class="w-20 h-20 bg-gradient-to-r from-indigo-900 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
              <span class="text-2xl font-bold text-white"><%= step[:number] %></span>
            </div>
            
            <!-- Connector Line (not for last item) -->
            <% unless index == @steps.length - 1 %>
              <div class="hidden md:block absolute top-10 left-1/2 w-full h-1 bg-gradient-to-r from-orange-500 to-transparent transform translate-x-full"></div>
            <% end %>
          </div>
          
          <!-- Step Icon -->
          <div class="text-4xl mb-4"><%= step[:icon] %></div>
          
          <!-- Step Content -->
          <h3 class="text-2xl font-bold text-slate-900 mb-4"><%= step[:title] %></h3>
          <p class="text-lg text-slate-600 mb-3"><%= step[:description] %></p>
          <p class="text-sm text-orange-600 font-medium"><%= step[:details] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Commission Tiers -->
<section class="py-20 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Commission Tiers</h2>
      <p class="text-lg text-slate-600">Earn more as you grow - our tiered system rewards your success</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @commission_tiers.each do |tier| %>
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-shadow border border-slate-200">
          <div class="text-center">
            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium mb-4 <%= tier[:color] %>">
              <%= tier[:tier] %>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2"><%= tier[:sales] %> Sales</h3>
            <div class="text-2xl font-bold text-indigo-900 mb-2"><%= tier[:commission] %></div>
            <p class="text-sm text-slate-600">Commission Rate</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

