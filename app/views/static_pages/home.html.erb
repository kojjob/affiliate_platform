<% content_for :structured_data do %>
  <!-- Products Structured Data -->
  <% @featured_products.each do |product| %>
    <script type="application/ld+json">
      <%= structured_data_product(product) %>
    </script>
  <% end %>
  
  <!-- FAQ Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How much can I earn with affiliate marketing?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can earn up to 25% commission on every sale. Top affiliates earn $10,000+ per month through our platform."
          }
        },
        {
          "@type": "Question", 
          "name": "Is it free to join AffiliateMarket?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, joining AffiliateMarket is completely free. You can start earning commissions immediately after signing up."
          }
        }
      ]
    }
  </script>
<% end %>

