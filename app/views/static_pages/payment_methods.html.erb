<!-- app/views/static_pages/payment_methods.html.erb -->
<% page_title(@page_title) %>
<% page_description(@page_description) %>
<% page_keywords(@page_keywords) %>
<% page_canonical(payment_methods_url) %>

<% content_for :structured_data do %>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "PaymentMethod",
      "name": "AffiliateMarket Payment Methods",
      "description": "Multiple payment options for affiliate commissions",
      "paymentMethodId": "multiple-options",
      "acceptedPayment": [
        "PayPal", "Bank Transfer", "Wire Transfer", "Check", "Cryptocurrency"
      ]
    }
  </script>
<% end %>

<!-- Breadcrumb Navigation -->
<nav aria-label="Breadcrumb" class="bg-slate-50 border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2">
    <ol class="flex items-center space-x-2 text-sm" itemscope itemtype="https://schema.org/BreadcrumbList">
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <a href="<%= root_path %>" itemprop="item" class="text-slate-600 hover:text-orange-500 transition-colors">
          <span itemprop="name">Home</span>
        </a>
        <meta itemprop="position" content="1">
      </li>
      <li class="text-slate-400">›</li>
      <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span itemprop="name" class="text-slate-900 font-medium">Payment Methods</span>
        <meta itemprop="position" content="2">
      </li>
    </ol>
  </div>
</nav>

<!-- Hero Section -->
<section class="bg-gradient-to-br from-indigo-900 via-purple-800 to-orange-600 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      Payment Methods
    </h1>
    <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed mb-8">
      Fast, secure payments with multiple options. 
      Get paid weekly with low minimums and competitive processing times.
    </p>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-2xl mx-auto">
      <div class="text-center">
        <div class="text-3xl font-bold">5</div>
        <div class="text-sm text-white/80">Payment Options</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold">$25</div>
        <div class="text-sm text-white/80">Min Payout</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold">Weekly</div>
        <div class="text-sm text-white/80">Payment Schedule</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold">1-5</div>
        <div class="text-sm text-white/80">Business Days</div>
      </div>
    </div>
  </div>
</section>

<!-- Payment Methods Comparison -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Choose Your Payment Method</h2>
      <p class="text-lg text-slate-600">Compare features and find the best option for your needs</p>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full bg-white rounded-2xl shadow-sm border border-slate-200">
        <thead>
          <tr class="bg-slate-50 border-b border-slate-200">
            <th class="px-6 py-4 text-left font-semibold text-slate-900">Payment Method</th>
            <th class="px-6 py-4 text-center font-semibold text-slate-900">Minimum</th>
            <th class="px-6 py-4 text-center font-semibold text-slate-900">Processing Time</th>
            <th class="px-6 py-4 text-center font-semibold text-slate-900">Fees</th>
            <th class="px-6 py-4 text-center font-semibold text-slate-900">Currencies</th>
            <th class="px-6 py-4 text-center font-semibold text-slate-900">Best For</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @detailed_payment_methods.each_with_index do |method, index| %>
            <tr class="<%= index.even? ? 'bg-white' : 'bg-slate-25' %> hover:bg-slate-50 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gradient-to-r <%= index == 0 ? 'from-blue-500 to-blue-600' : index == 1 ? 'from-green-500 to-green-600' : index == 2 ? 'from-purple-500 to-purple-600' : index == 3 ? 'from-yellow-500 to-yellow-600' : 'from-orange-500 to-orange-600' %> rounded-lg flex items-center justify-center mr-3">
                    <span class="text-white font-bold text-sm">
                      <%= method[:method][0] %>
                    </span>
                  </div>
                  <div>
                    <div class="font-medium text-slate-900"><%= method[:method] %></div>
                    <div class="text-sm text-slate-500"><%= method[:best_for] %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="font-medium text-slate-900"><%= method[:minimum] %></span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-slate-700"><%= method[:processing_time] %></span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="<%= method[:fees] == 'Free' ? 'text-green-600 font-medium' : 'text-slate-700' %>">
                  <%= method[:fees] %>
                </span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-slate-700 text-sm"><%= method[:currency] %></span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="text-slate-600 text-sm"><%= method[:best_for] %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<!-- Payment Schedule -->
<section class="py-20 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Payment Schedule</h2>
      <p class="text-lg text-slate-600">When and how you'll receive your earnings</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Schedule Details -->
      <div class="bg-white rounded-2xl p-8 shadow-sm">
        <h3 class="font-semibold text-slate-900 mb-6">Payment Timeline</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-slate-100">
            <span class="text-slate-700">Payment Frequency:</span>
            <span class="font-medium text-slate-900"><%= @payment_schedule[:frequency] %></span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-slate-100">
            <span class="text-slate-700">Payment Day:</span>
            <span class="font-medium text-slate-900"><%= @payment_schedule[:payment_day] %></span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-slate-100">
            <span class="text-slate-700">Cutoff Time:</span>
            <span class="font-medium text-slate-900"><%= @payment_schedule[:cutoff_time] %></span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-slate-100">
            <span class="text-slate-700">Minimum Threshold:</span>
            <span class="font-medium text-slate-900"><%= @payment_schedule[:minimum_threshold] %></span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-slate-100">
            <span class="text-slate-700">Processing Time:</span>
            <span class="font-medium text-slate-900"><%= @payment_schedule[:processing_time] %></span>
          </div>
          <div class="flex items-center justify-between py-3">
            <span class="text-slate-700">Hold Period:</span>
            <span class="font-medium text-green-600"><%= @payment_schedule[:hold_period] %></span>
          </div>
        </div>
      </div>
      
      <!-- Visual Timeline -->
      <div class="bg-white rounded-2xl p-8 shadow-sm">
        <h3 class="font-semibold text-slate-900 mb-6">Weekly Payment Cycle</h3>
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <span class="text-white text-sm font-bold">1</span>
            </div>
            <div>
              <h4 class="font-medium text-slate-900 mb-1">Monday - Thursday</h4>
              <p class="text-slate-600 text-sm">Earn commissions from sales throughout the week</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <span class="text-white text-sm font-bold">2</span>
            </div>
            <div>
              <h4 class="font-medium text-slate-900 mb-1">Thursday 11:59 PM PST</h4>
              <p class="text-slate-600 text-sm">Weekly cutoff - earnings finalized for payment</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <span class="text-white text-sm font-bold">3</span>
            </div>
            <div>
              <h4 class="font-medium text-slate-900 mb-1">Friday</h4>
              <p class="text-slate-600 text-sm">Payments processed to all qualifying affiliates</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center flex-shrink-0 mr-4">
              <span class="text-white text-sm font-bold">4</span>
            </div>
            <div>
              <h4 class="font-medium text-slate-900 mb-1">Monday - Wednesday</h4>
              <p class="text-slate-600 text-sm">Funds arrive in your account (varies by method)</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Setup Guides -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Payment Setup Guides</h2>
      <p class="text-lg text-slate-600">Step-by-step instructions for each payment method</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- PayPal Setup -->
      <div class="bg-slate-50 rounded-2xl p-6">
        <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center mb-4">
          <span class="text-white font-bold">PP</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-3">PayPal Setup</h3>
        <ul class="text-slate-600 text-sm space-y-2 mb-4">
          <li>• Verify your PayPal account</li>
          <li>• Ensure email matches your affiliate account</li>
          <li>• Enable instant transfers (optional)</li>
          <li>• Set as primary payment method</li>
        </ul>
        <button class="text-blue-600 hover:text-blue-700 font-medium text-sm">View Detailed Guide →</button>
      </div>
      
      <!-- Bank Transfer Setup -->
      <div class="bg-slate-50 rounded-2xl p-6">
        <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center mb-4">
          <span class="text-white font-bold">🏦</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-3">Bank Transfer Setup</h3>
        <ul class="text-slate-600 text-sm space-y-2 mb-4">
          <li>• Provide routing and account numbers</li>
          <li>• Verify account ownership</li>
          <li>• Confirm bank supports ACH transfers</li>
          <li>• Test with micro-deposits</li>
        </ul>
        <button class="text-green-600 hover:text-green-700 font-medium text-sm">View Detailed Guide →</button>
      </div>
      
      <!-- Cryptocurrency Setup -->
      <div class="bg-slate-50 rounded-2xl p-6">
        <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center mb-4">
          <span class="text-white font-bold">₿</span>
        </div>
        <h3 class="font-semibold text-slate-900 mb-3">Crypto Setup</h3>
        <ul class="text-slate-600 text-sm space-y-2 mb-4">
          <li>• Choose supported cryptocurrency</li>
          <li>• Provide wallet address</li>
          <li>• Verify address accuracy</li>
          <li>• Understand network fees</li>
        </ul>
        <button class="text-orange-600 hover:text-orange-700 font-medium text-sm">View Detailed Guide →</button>
      </div>
    </div>
  </div>
</section>

<!-- Tax Information -->
<section class="py-20 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Tax Information</h2>
      <p class="text-lg text-slate-600">Important tax considerations for affiliate earnings</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- US Tax Info -->
      <div class="bg-white rounded-2xl p-8 shadow-sm">
        <h3 class="font-semibold text-slate-900 mb-6">US Tax Requirements</h3>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
              <span class="text-white text-xs">📄</span>
            </div>
            <div>
              <h4 class="font-medium text-slate-900 mb-1">1099-NEC Form</h4>
              <p class="text-slate-600 text-sm">Issued to US affiliates earning $600+ annually</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
