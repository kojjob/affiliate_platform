<!-- Link Generation Tool -->
<section class="py-20 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Quick Link Generator</h2>
      <p class="text-lg text-slate-600">Generate affiliate links with custom tracking parameters</p>
    </div>
    
    <div class="bg-slate-50 rounded-3xl p-8" data-controller="link-generator">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Input Form -->
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Product URL</label>
            <input type="url" 
                   placeholder="https://example.com/product"
                   class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                   data-link-generator-target="productUrl"
                   data-action="input->link-generator#generateLink">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Campaign Name (Optional)</label>
            <input type="text" 
                   placeholder="summer-sale-2025"
                   class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                   data-link-generator-target="campaignName"
                   data-action="input->link-generator#generateLink">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Traffic Source</label>
            <select class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                    data-link-generator-target="trafficSource"
                    data-action="change->link-generator#generateLink">
              <option value="website">Website</option>
              <option value="social">Social Media</option>
              <option value="email">Email</option>
              <option value="youtube">YouTube</option>
              <option value="blog">Blog</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>
        
        <!-- Generated Link -->
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Your Affiliate Link</label>
            <div class="relative">
              <input type="text" 
                     readonly
                     value="https://affiliatemarket.com/r/abc123?utm_source=website&utm_campaign=demo"
                     class="w-full px-4 py-3 pr-12 border border-slate-300 rounded-lg bg-slate-100 text-slate-700"
                     data-link-generator-target="generatedLink">
              <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-slate-500 hover:text-slate-700"
                      data-action="click->link-generator#copyLink">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <div class="space-y-3">
            <h4 class="font-medium text-slate-900">Tracking Parameters:</h4>
            <div class="bg-white rounded-lg p-4 border border-slate-200">
              <div class="grid grid-cols-2 gap-3 text-sm">
                <div>
                  <span class="text-slate-500">Source:</span>
                  <span class="font-medium text-slate-900" data-link-generator-target="displaySource">website</span>
                </div>
                <div>
                  <span class="text-slate-500">Medium:</span>
                  <span class="font-medium text-slate-900">affiliate</span>
                </div>
                <div class="col-span-2">
                  <span class="text-slate-500">Campaign:</span>
                  <span class="font-medium text-slate-900" data-link-generator-target="displayCampaign">demo</span>
                </div>
              </div>
            </div>
          </div>
          
          <button class="w-full bg-gradient-to-r from-indigo-900 to-orange-500 text-white py-3 px-4 rounded-lg font-medium hover:from-indigo-800 hover:to-orange-400 transition-all duration-200"
                  data-action="click->link-generator#copyLink">
            Copy Link to Clipboard
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

