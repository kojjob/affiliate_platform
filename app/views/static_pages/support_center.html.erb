<% page_canonical(support_center_url) %>

<% content_for :structured_data do %>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How do I generate my first affiliate link?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "To generate your first affiliate link, log into your dashboard, browse our product catalog, select a product you want to promote, and click 'Get Link' to generate your unique tracking URL."
          }
        },
        {
          "@type": "Question",
          "name": "When do I get paid my commissions?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Commissions are paid weekly every Friday for amounts above the minimum threshold. Processing times vary by payment method from 1-5 business days."
          }
        }
      ]
    }
  </script>
<% end %>

