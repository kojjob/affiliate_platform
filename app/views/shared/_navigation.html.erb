                  <div class="border-t border-slate-100 my-2"></div>
                  
                  <%= button_to destroy_user_session_path, method: :delete, 
                      class: "flex w-full items-center px-3 py-2 text-sm text-left text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors border-0 bg-transparent", 
                      role: "menuitem", 
                      form: { data: { turbo: false } } do %>
                    <svg class="mr-3 h-4 w-4 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd" />
                    </svg>
                    Sign Out
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Auth Links for Non-authenticated Users -->
          <div class="flex items-center space-x-2 hidden md:flex">
            <%= link_to "Sign In", new_user_session_path, 
                class: "text-slate-700 hover:text-indigo-900 px-3 py-2 text-sm font-medium transition-colors rounded-lg hover:bg-slate-50" %>
            <%= link_to "Join Now", new_user_registration_path, 
                class: "bg-gradient-to-r from-indigo-900 to-orange-500 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-indigo-800 hover:to-orange-400 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" %>
          </div>
        <% end %>

        <!-- Mobile menu button -->
        <button class="lg:hidden p-2 text-slate-700 hover:text-indigo-900 rounded-lg hover:bg-slate-50 transition-colors"
                data-action="click->navigation#toggleMobile"
                data-navigation-target="mobileToggle">
          <svg class="h-5 w-5 transition-transform duration-200" data-navigation-target="hamburgerIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg class="h-5 w-5 transition-transform duration-200 hidden" data-navigation-target="closeIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="lg:hidden hidden transform transition-all duration-300 ease-in-out" 
         data-navigation-target="mobileMenu"
         data-action="click@window->navigation#handleOutsideClick">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white/95 backdrop-blur-md rounded-xl mt-2 border border-slate-200 shadow-lg">
        <% if user_signed_in? %>
          <!-- Mobile User Info -->
          <div class="flex items-center space-x-3 p-3 bg-slate-50 rounded-lg mb-4">
            <% if current_user.avatar.present? %>
              <%= image_tag current_user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                <span class="text-white font-medium">
                  <%= (current_user.first_name&.first || current_user.email.first).upcase %>
                </span>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-slate-900 truncate">
                <%= current_user.first_name || current_user.email.split('@').first %>
              </p>
              <p class="text-xs text-slate-500 truncate">
                <%= current_user.role.humanize %>
              </p>
            </div>
          </div>

          <!-- Role-based Mobile Navigation -->
          <% case current_user.role %>
          <% when 'admin' %>
            <%= link_to admin_dashboard_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" do %>
              🎛️ Admin Dashboard
            <% end %>
          <% when 'trader' %>
            <%= link_to traders_dashboard_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" do %>
              📊 Trader Dashboard
            <% end %>
          <% when 'affiliate' %>
            <%= link_to "#", class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" do %>
              🔗 Affiliate Dashboard
            <% end %>
          <% end %>

          <%= link_to "Profile", edit_user_registration_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
          
          <div class="border-t border-slate-200 my-2"></div>
          
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
              data: { turbo_confirm: "Are you sure?" }, 
              class: "w-full text-left px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors border-0 bg-transparent" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
          <%= link_to "Join Now", new_user_registration_path, class: "block px-3 py-2 text-base font-medium bg-gradient-to-r from-indigo-900 to-orange-500 text-white rounded-lg transition-all hover:from-indigo-800 hover:to-orange-400" %>
        <% end %>

        <div class="border-t border-slate-200 pt-3 mt-3">
          <%= link_to "Products", "#", class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
          <%= link_to "Categories", "#", class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
          <%= link_to "How It Works", how_it_works_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
          <%= link_to "Affiliate Program", affiliate_program_path, class: "block px-3 py-2 text-base font-medium text-slate-700 hover:text-indigo-900 hover:bg-slate-50 rounded-lg transition-colors" %>
        </div>

        <!-- Mobile Search -->
        <div class="border-t border-slate-200 pt-3 mt-3">
          <div class="px-3 py-2">
            <input type="text"
                   placeholder="Search products..."
                   class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white/80 backdrop-blur-sm">
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>