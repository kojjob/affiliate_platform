<% content_for :title, "Sign In - AffiliateMarket" %>
<% content_for :description, "Sign in to your AffiliateMarket account and start earning commissions from your favorite brands." %>

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-indigo-900 to-slate-900 flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-orange-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-400/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-indigo-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Login Container -->
  <div class="relative w-full max-w-6xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      
      <!-- Left Side - Illustration/Branding -->
      <div class="hidden lg:flex flex-col items-center justify-center text-center space-y-8">
        <!-- 3D Shopping Cart with Chain -->
        <div class="relative">
          <!-- Floating Shopping Cart -->
          <div class="relative transform rotate-12 hover:rotate-6 transition-transform duration-700">
            <div class="w-32 h-28 border-4 border-cyan-400/60 rounded-lg bg-gradient-to-br from-cyan-500/20 to-blue-600/20 backdrop-blur-sm"></div>
            <!-- Cart Handle -->
            <div class="absolute -top-2 left-6 right-6 h-4 border-4 border-cyan-400/60 rounded-t-lg bg-gradient-to-br from-cyan-500/20 to-blue-600/20"></div>
            <!-- Cart Wheels -->
            <div class="absolute -bottom-6 left-4 w-6 h-6 bg-cyan-400/80 rounded-full shadow-lg"></div>
            <div class="absolute -bottom-6 right-4 w-6 h-6 bg-cyan-400/80 rounded-full shadow-lg"></div>
          </div>
          
          <!-- Glowing Chain Link -->
          <div class="absolute top-16 -right-16 animate-bounce" style="animation-duration: 3s;">
            <div class="w-8 h-12 border-4 border-cyan-400/60 rounded-full bg-gradient-to-br from-cyan-500/30 to-blue-600/30 transform rotate-45"></div>
            <div class="absolute top-6 w-8 h-12 border-4 border-cyan-400/60 rounded-full bg-gradient-to-br from-cyan-500/30 to-blue-600/30 transform -rotate-45"></div>
          </div>
          
          <!-- Floating Commission Coins -->
          <div class="absolute -top-8 -left-16 animate-float">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center shadow-2xl transform rotate-12">
              <span class="text-white font-bold text-lg">$</span>
            </div>
          </div>
          
          <div class="absolute -bottom-4 -right-8 animate-float" style="animation-delay: 1s;">
            <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center shadow-2xl transform -rotate-12">
              <span class="text-white font-bold">$</span>
            </div>
          </div>
          
          <!-- Connecting Lines -->
          <div class="absolute top-8 left-20 w-24 h-px bg-gradient-to-r from-cyan-400/60 to-orange-400/60"></div>
          <div class="absolute top-12 left-16 w-20 h-px bg-gradient-to-r from-orange-400/60 to-cyan-400/60"></div>
        </div>
        
        <!-- Welcome Text -->
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-white via-cyan-100 to-orange-100 bg-clip-text text-transparent leading-tight">
            Welcome Back
          </h1>
          <p class="text-xl text-slate-300 max-w-md mx-auto leading-relaxed">
            Continue your journey to earning passive income through affiliate marketing
          </p>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex items-center space-x-8 text-slate-400">
          <div class="text-center">
            <div class="text-2xl font-bold text-orange-400">25%</div>
            <div class="text-sm">Max Commission</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-cyan-400">$1M+</div>
            <div class="text-sm">Paid Out</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-slate-300">50K+</div>
            <div class="text-sm">Affiliates</div>
          </div>
        </div>
      </div>
      
      <!-- Right Side - Login Form -->
      <div class="w-full max-w-md mx-auto">
        <!-- Glassmorphism Card -->
        <div class="bg-white/90 backdrop-blur-xl border border-white/20 rounded-2xl shadow-2xl p-8 space-y-6">
          <!-- Header -->
          <div class="text-center space-y-2">
            <div class="flex items-center justify-center space-x-2 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-slate-900 to-orange-500 rounded-xl flex items-center justify-center">
                <span class="text-white font-bold">AM</span>
              </div>
              <span class="text-2xl font-bold text-slate-900">AffiliateMarket</span>
            </div>
            <h2 class="text-3xl font-bold text-slate-900">Sign In</h2>
            <p class="text-slate-600">Access your affiliate dashboard</p>
          </div>
          
          <!-- Login Form -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                       html: { class: "space-y-6", data: { controller: "form-validation" }}) do |f| %>
            
            <!-- Email Field -->
            <div class="space-y-2">
              <%= f.label :email, "Email Address", class: "block text-sm font-medium text-slate-700" %>
              <div class="relative">
                <%= f.email_field :email, 
                    autofocus: true, 
                    autocomplete: "email",
                    placeholder: "Enter your email address",
                    class: "w-full px-4 py-3 pl-12 border border-slate-300 rounded-xl bg-white/50 backdrop-blur-sm 
                            focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200
                            text-slate-900 placeholder-slate-500" %>
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- Password Field -->
            <div class="space-y-2">
              <%= f.label :password, class: "block text-sm font-medium text-slate-700" %>
              <div class="relative">
                <%= f.password_field :password, 
                    autocomplete: "current-password",
                    placeholder: "Enter your password",
                    class: "w-full px-4 py-3 pl-12 pr-12 border border-slate-300 rounded-xl bg-white/50 backdrop-blur-sm 
                            focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200
                            text-slate-900 placeholder-slate-500" %>
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                  </svg>
                </div>
                <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center" data-action="click->form-validation#togglePassword">
                  <svg class="h-5 w-5 text-slate-400 hover:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Remember Me & Forgot Password -->
            <div class="flex items-center justify-between">
              <% if devise_mapping.rememberable? %>
                <div class="flex items-center">
                  <%= f.check_box :remember_me, class: "h-4 w-4 text-orange-500 focus:ring-orange-500 border-slate-300 rounded" %>
                  <%= f.label :remember_me, class: "ml-2 block text-sm text-slate-700" %>
                </div>
              <% end %>
              
              <%= link_to "Forgot password?", new_password_path(resource_name), 
                  class: "text-sm text-orange-500 hover:text-orange-600 font-medium transition-colors" %>
            </div>
            
            <!-- Submit Button -->
            <div class="space-y-4">
              <%= f.submit "Sign In", 
                  class: "w-full bg-gradient-to-r from-slate-900 to-orange-500 text-white py-3 px-6 rounded-xl 
                          font-medium hover:from-slate-800 hover:to-orange-400 focus:ring-2 focus:ring-orange-500 
                          focus:ring-offset-2 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98]
                          shadow-lg hover:shadow-xl" %>
            </div>
          <% end %>
          
          <!-- Social Login (Optional) -->
          <div class="space-y-4">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-slate-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-slate-500">or continue with</span>
              </div>
            </div>
            
            <div class="grid grid-cols-3 gap-3">
              <button class="w-full inline-flex justify-center py-3 px-4 border border-slate-300 rounded-xl bg-white/50 backdrop-blur-sm hover:bg-slate-50 transition-colors">
                <svg class="h-5 w-5 text-slate-600" viewBox="0 0 24 24">
                  <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
              </button>
              
              <button class="w-full inline-flex justify-center py-3 px-4 border border-slate-300 rounded-xl bg-white/50 backdrop-blur-sm hover:bg-slate-50 transition-colors">
                <svg class="h-5 w-5 text-slate-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
              </button>
              
              <button class="w-full inline-flex justify-center py-3 px-4 border border-slate-300 rounded-xl bg-white/50 backdrop-blur-sm hover:bg-slate-50 transition-colors">
                <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Sign Up Link -->
          <div class="text-center">
            <p class="text-sm text-slate-600">
              Don't have an account? 
              <%= link_to "Join the affiliate program", new_registration_path(resource_name), 
                  class: "font-medium text-orange-500 hover:text-orange-600 transition-colors" %>
            </p>
          </div>
        </div>
        
        <!-- Additional Links -->
        <div class="mt-6 text-center space-y-2">
          <%= render "devise/shared/links" unless action_name == "new" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom Animations -->
<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(5deg); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
